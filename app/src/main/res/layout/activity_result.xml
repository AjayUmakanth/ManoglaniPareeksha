<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:textSize="40sp"
        android:textColor="@color/logo_blue"
        android:text="ID: " />

    <TextView
        android:id="@+id/phq9_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50sp"
        android:layout_marginTop="50sp"
        android:textSize="30sp"
        android:textColor="@color/logo_blue"
        android:text="PHQ-9 Result" />

    <TextView
        android:id="@+id/phq9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phq9_label"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50sp"
        android:layout_marginTop="20sp"
        android:textSize="30sp"
        android:text="5" />

    <TextView
        android:id="@+id/neurosky_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phq9"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50sp"
        android:layout_marginTop="50sp"
        android:text="Neurosky Data: "
        android:textColor="@color/logo_blue"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/neurosky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/neurosky_label"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50sp"
        android:layout_marginTop="20sp"
        android:textSize="30sp"
        android:hint="Enter Score" />

    <Button
        android:id="@+id/mail"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:layout_below="@+id/neurosky"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="75sp"
        android:layout_marginEnd="60sp"
        android:background="@color/logo_blue"
        android:text="Mail Results"
        android:textColor="@color/logo_white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:layout_below="@+id/neurosky"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60sp"
        android:layout_marginTop="75sp"
        android:background="@color/logo_blue"
        android:text="Cancel"
        android:textColor="@color/logo_white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/finish"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:layout_below="@+id/neurosky"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="75sp"
        android:background="@color/logo_blue"
        android:visibility="invisible"
        android:text="Finish"
        android:textColor="@color/logo_white"
        android:textSize="20sp" />
</RelativeLayout>